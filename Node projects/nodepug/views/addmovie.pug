doctype html
html
  head
    title Add movie
    link(
      rel="stylesheet" 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    )  
  body
    div.container
      h1 New movie
      form(action='/addmovie', method='POST')
        div.form-group
          input(type="text", name="title", placeholder="Title").form-control
        div.form-group
          input(type="text", name="director", placeholder="Director").form-control
        div.form-group
          input(type="number", name="year", placeholder="Year").form-control 
        div.form-group
          input(type="submit", value="Add").btn.btn-primary